<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_assets">
<!--    android:background="@drawable/greenbg01">-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="413dp"
            android:layout_height="wrap_content"
            android:background="@color/gradientblue"
            app:navigationIcon="@drawable/back_ic"
            app:title="ADD ASSET" />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_marginTop="15dp"
            android:layout_marginStart="130dp"
            android:layout_width="123dp"
            android:layout_height="102dp"
            app:srcCompat="@drawable/tmslogo" />

    <Spinner
        android:id="@+id/asset_type"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/pistagreenspinner"
        android:fontFamily="@font/mulish"
        android:inputType="none"
        android:spinnerMode="dropdown"
        android:textColor="@color/black"
        android:textSize="18dp"
        />


    <EditText
        android:id="@+id/model"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/gradient_blue"
        android:textColor="@color/white"
        android:hint="Model"
        android:textSize="18dp"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/quantity"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:background="@color/gradientblue"
        android:textColor="@color/white"
        android:hint="Quantity"
        android:textSize="18dp"
        android:gravity="left|center"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/supplier_name"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/gradient_blue"
        android:textColor="@color/white"
        android:hint="Supplier name"
        android:textSize="18dp"
        android:gravity="left|center"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/supplier_address"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:background="@color/gradientblue"
        android:textColor="@color/white"
        android:hint="Supplier Address"
        android:textSize="18dp"
        android:gravity="left|center"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/bill_no"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/gradient_blue"
        android:textColor="@color/white"
        android:hint="Bill no."
        android:textSize="18dp"
        android:gravity="left|center"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/date_of_purchase"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:background="@color/gradientblue"
        android:textColor="@color/white"
        android:hint="Date of Purchase"
        android:textSize="18dp"
        android:gravity="left|center"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/amount"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/gradient_blue"
        android:textColor="@color/white"
        android:hint="Amount"
        android:textSize="18dp"
        android:gravity="left|center"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/ref_no"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:background="@color/gradientblue"
        android:textColor="@color/white"
        android:hint="Ref. no."
        android:textSize="18dp"
        android:gravity="left|center"
        android:padding="10dp"
        />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/addasset"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:cornerRadius="15dp"
            android:backgroundTint="@color/gradientblue"
            android:text="Add assets"
            android:layout_gravity="center"
            />

    </LinearLayout>
</ScrollView>