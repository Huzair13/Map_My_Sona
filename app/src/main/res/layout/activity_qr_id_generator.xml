<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Qr_id_generator"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">
<!--    android:background="@drawable/greenbg01">-->





    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">



        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="123dp"
            android:layout_height="102dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="150dp"
            app:srcCompat="@drawable/tmslogo" />
    </LinearLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/loginemailAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Qr ID Number"
        android:padding="15dp"
        android:layout_marginTop="50dp"
        app:startIconDrawable="@drawable/qrid"
        app:boxCornerRadiusTopEnd="@dimen/browser_actions_context_menu_min_padding"
        app:boxCornerRadiusTopStart="@dimen/browser_actions_context_menu_min_padding"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/elmessiri"
            android:backgroundTint="@color/white"

             />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_generate"
        android:text="Generate QR Code"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        app:icon="@drawable/qrid"
        app:cornerRadius="16dp"
        android:backgroundTint="@color/gradientblue"

       >

    </com.google.android.material.button.MaterialButton>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/iv_output"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/background1">
    </ImageView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/qrsave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        app:cornerRadius="20dp"
        android:backgroundTint="@color/gradientblue"
        app:icon="@drawable/save"
        >

    </com.google.android.material.button.MaterialButton>



