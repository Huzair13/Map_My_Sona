<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterPage"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/greenbg03">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="145dp"
            app:srcCompat="@drawable/ssbg8" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN UP TO MMS"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/greyblue"
            android:layout_gravity="center">

        </TextView>
        <TextView
            android:id="@+id/alreadyreg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already a member ? Login"
            android:textSize="15dp"
            android:textColor="@color/grey"
            android:layout_marginTop="15dp"
            android:layout_gravity="center">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="17dp">



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/signupemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/anilogin"
        android:hint="Username "
        android:padding="15dp"
        app:boxCornerRadiusTopEnd="@dimen/browser_actions_context_menu_min_padding"
        app:boxCornerRadiusTopStart="@dimen/browser_actions_context_menu_min_padding"
        app:startIconDrawable="@drawable/ic_baseline_perm_identity_24">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/signupemaillInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:inputType="text"
            android:backgroundTint="@color/lightpistagreen"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/signuppass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/anilogin"
        android:hint="Password "
        android:padding="15dp"
        app:boxCornerRadiusTopEnd="@dimen/browser_actions_context_menu_min_padding"
        app:boxCornerRadiusTopStart="@dimen/browser_actions_context_menu_min_padding"
        app:startIconDrawable="@drawable/ic_baseline_perm_identity_24">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/signuppassInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:inputType="text"
            android:backgroundTint="@color/lightpistagreen"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/signUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="4pt"
        android:layout_marginLeft="5pt"
        android:text="Create an account"
        android:textColor="@color/grey"
        android:textAlignment="center"
        android:textStyle="italic"
        android:backgroundTint="@color/pistagreen"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/googlesign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="4pt"
        android:layout_marginLeft="5pt"
        app:icon="@drawable/google"
        android:textColor="@color/grey"
        android:textAlignment="center"
        android:textStyle="italic"
        android:backgroundTint="@color/pistagreen"
        android:text="sign up with google"/>

    </LinearLayout>
